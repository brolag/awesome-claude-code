{
    "workbench.colorTheme": "Default Dark+",
    "workbench.iconTheme": "vscode-icons",
    "workbench.colorCustomizations": {
        "titleBar.activeBackground": "#1e3a5f",
        "titleBar.activeForeground": "#e6f3ff",
        "titleBar.inactiveBackground": "#1e3a5f80",
        "statusBar.background": "#1e3a5f",
        "statusBar.foreground": "#e6f3ff",
        "activityBar.background": "#16324d",
        "activityBar.foreground": "#e6f3ff",
        "sideBar.background": "#1a3450",
        "sideBar.foreground": "#e6f3ff"
    },
    "editor.fontSize": 14,
    "editor.fontFamily": "Fira Code, Consolas, 'Courier New', monospace",
    "editor.fontLigatures": true,
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 1000,
    "git.enableSmartCommit": true,
    "git.autofetch": true
}
